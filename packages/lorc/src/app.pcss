/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer components {
	/* Simplified Material Design */
	.text-primary {
		@apply text-primary-on-light;
		@apply dark:text-primary-on-dark;
	}
	.text-primary-on {
		@apply text-primary-on-light;
		@apply dark:text-primary-on-dark;
	}
	.text-primary-container {
		@apply text-primary-on-light;
		@apply dark:text-primary-on-dark;
	}
	.text-primary-container-on {
		@apply text-primary-on-light;
		@apply dark:text-primary-on-dark;
	}
	.text-primary-inverse {
		@apply text-primary-on-light;
		@apply dark:text-primary-on-dark;
	}

	.text-secondary {
		@apply text-primary-on-light;
		@apply dark:text-primary-on-dark;
	}
	.text- {
		@apply text-primary-on-light;
		@apply dark:text-primary-on-dark;
	}
	.text-tertiary {
		@apply text-primary-on-light;
		@apply dark:text-primary-on-dark;
	}
	.inner-section {
		@apply px-4 sm:px-6 md:px-8 max-w-7xl py-12 sm:py-32 md:py-44;
	}

	.bg-surface {
		@apply bg-surface-light dark:bg-surface-dark;
	}
}

