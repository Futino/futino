{
	"name": "ui",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"dependencies": {
		"tsconfig": "workspace:*"
	},
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.35.1",
		"@storybook/addon-essentials": "7.1.0-alpha.41",
		"@storybook/addon-interactions": "7.1.0-alpha.41",
		"@storybook/addon-links": "7.1.1",
		"@storybook/addon-mdx-gfm": "7.1.0-alpha.41",
		"@storybook/blocks": "7.1.0-alpha.41",
		"@storybook/manager-api": "7.1.0-alpha.41",
		"@storybook/svelte": "7.1.0-alpha.41",
		"@storybook/sveltekit": "7.1.0-alpha.41",
		"@storybook/testing-library": "0.2.0-next.1",
		"@storybook/theming": "7.1.0-alpha.41",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.21.0",
		"@sveltejs/package": "^2.1.0",
		"@typescript-eslint/eslint-plugin": "^5.60.1",
		"@typescript-eslint/parser": "^5.60.1",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.44.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-storybook": "^0.6.12",
		"eslint-plugin-svelte": "^2.32.2",
		"postcss": "^8.4.24",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^3.0.3",
		"publint": "^0.1.13",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"storybook": "7.1.0-alpha.41",
		"svelte": "^4.0.1",
		"svelte-check": "^3.4.4",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.6.0",
		"typescript": "^5.1.6",
		"vite": "^4.3.9",
		"vitest": "^0.33.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
