		"format": "prettier --plugin-search-dir . --write ."
	},
	"dependencies": {
		"tsconfig": "workspace:*",
		"tsparticles": "^2.12.0",
		"tsparticles-updater-angle": "^2.9.3"
	},
	"type": "module",
	"packageManager": "pnpm@8.6.12"
